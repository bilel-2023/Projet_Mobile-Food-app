<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">


    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [User's Name]!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Today's Meal Plan Card -->
    <LinearLayout
        android:id="@+id/mealPlanCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-medium"
            android:text="Today's Meal Plan"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todaysMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Breakfast: Oatmeal\nLunch: Salad\nDinner: Grilled Chicken"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Navigation Buttons or Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Recipe Search Button -->
        <Button
            android:id="@+id/btnRecipeSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Recipes"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Barcode Scanning Button -->
        <Button
            android:id="@+id/btnBarcodeScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Barcode"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Nutritional Tracking Button -->
        <Button
            android:id="@+id/btnNutritionalTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nutritional Tracking"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Shopping List Management Button -->
        <Button
            android:id="@+id/btnShoppingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping List Management"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>